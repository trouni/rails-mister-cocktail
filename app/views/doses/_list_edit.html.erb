<h3>Ingredients</h3>
<% if @cocktail.doses.size > 0 %>
  <ul class="list-ingredients">
    <% @cocktail.doses.each do |dose| %>
      <li class="d-flex justify-content-between mx-auto w-75"><span><%= dose.description %> of <%= dose.ingredient.name %></span> <a data-toggle="modal" data-target="#deleteIngredient<%= dose.id %>"><i class="far fa-trash-alt"></i></a></li>
    <% end %>
  </ul>
<% else %>
  <p>No ingredients in this cocktail recipe yet...</p>
<% end %>

<% @cocktail.doses.each do |dose| %>
  <!-- Delete Ingredient Modal -->
  <div class="modal fade" id="deleteIngredient<%= dose.id %>" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Remove ingredient?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to remove <%= dose.ingredient.name %> from <%= @cocktail.name %>?</p>
          <%= link_to "Remove", dose_path(dose), method: :delete, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
