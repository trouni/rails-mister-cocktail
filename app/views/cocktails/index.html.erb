<div id="main-banner" class="banner"">
  <div class="container d-flex justify-content-center flex-column h-100">
    <div>
      <span class="logo">HipsterBlend <i class="fas fa-cocktail"></i></span>
      <h1 class="mt-3">World's best hipster cocktail recipes.</h1>
      <p>Because alcohol tastes better than tears.</p>

      <%= simple_form_for :search, wrapper: :inline_form, html: { id: 'search-form', class: 'form-inline' }, url: search_cocktails_path, method: :get do |f| %>
          <%= f.input :keyword, label: false, placeholder: "Old Fashioned" %>
          <%= f.button :submit, "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


<div id="cocktails" class="container mt-5">
  <h2>Top cocktails</h2>
  <div class="grid-cocktails mb-5">
    <% @top_cocktails.take(4).each do |cocktail| %>
      <%= render partial: "card", locals: { cocktail: cocktail } %>
    <% end %>
  </div>

  <h2>All our cocktails</h2>
  <div class="grid-cocktails mb-5">
    <% @cocktails.each do |cocktail| %>
      <%= render partial: "card", locals: { cocktail: cocktail } %>
    <% end %>
  </div>
</div>
