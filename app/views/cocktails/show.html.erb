<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= 'https://source.unsplash.com/1600x900/?cocktail' %>');">
  <div class="container d-flex justify-content-center flex-column h-100">
    <div>
      <h1><%= @cocktail.name %></h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row p-3">
    <div class="col">
      <h3>Ingredients</h3>
      <button id="button-add-ingredient" type="button" class="btn btn-primary" data-toggle="modal" data-target="#newIngredient">
        <i class="far fa-plus-square"> Add an ingredient</i>
      </button>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.ingredient.name %> - <%= dose.description %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<!-- New Ingredient Modal -->
<div class="modal fade" id="newIngredient" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add an ingredient to <%= @cocktail.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render "doses/form" %>
      </div>
    </div>
  </div>
</div>
